@page "/Recentactivity"

@attribute [Authorize]
<AuthorizeView>
    <Authorized>
        <style>
            span {
                font-size: 30px;
            }
            .btn:hover{
                background-color:green;
            }
        </style>
        <div class="card" style="min-height:600px">
            <div class="card-header">
                <span>Recent activity</span>
            </div>
            <div class="card-body">
                <button class="btn btn-danger" style="width:400px">Click</button>
                <div style="margin-top: 15px; color: #999; font-size: 18px; line-height: 24px">
                    There is no activity in your account yet. Try adding an expense!
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

