@page "/AddFriends"
@using Income_and_Expense.Services;
@inject FriendService friendService
@inject NavigationManager NavigationManager

<div class="container">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                Friends
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#exampleModal">Add Friend</button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title" id="exampleModalLabel">Add an expense</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <select class="form-select form-control" aria-label="Default select example">
                                            <option value="0">Select User</option>
                                            @foreach (var u in UserList)
                                            {
                                                <option value="@u.Value">@u.Text</option>
                                            }
                                        </select>
                                    </div>

                                    @*<div class="form-group">
                                    <label for="">Key Species *</label>
                                    <Income_and_Expense.Components.MultiSelect2 Id="KeySpeciesId" Datasource="@UserList" @bind-Value="e.Image" DefaultOption="Select Key Species">
                                    </Income_and_Expense.Components.MultiSelect2>
                                    </div>*@
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Enter a description" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Rs 0.00" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

