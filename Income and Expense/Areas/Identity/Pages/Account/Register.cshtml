<body class="container-fluid hold-transition  bg-white vh-100 overflow-hidden">



    <div class="row w-100 d-flex align-items-center ">
        <div class="px-4 col-md-5 bg-left vh-100 d-flex align-items-center flex-column">
            <div class="w-100 flex-grow-1 text-center pt-3 text-white">
                <h4>Digital Progress Reporting System</h4>
            </div>
            <div class="login-box mx-auto flex-grow-1">

                <!-- /.login-logo -->
                <div class="card" style="box-shadow: none;background-color: transparent;">
                    <div class="card-body" style="background: none;">
                        <form id="account" method="post">
                            <div class="text-white">
                                <h3>Sign Up </h3>
                                <p>Please Sign Up to your account.</p>
                            </div>

                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="input-group mb-3">
                                <input asp-for="Input.FirstName" class="form-control rounded-edges-log" placeholder="First Name">
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3">
                                <input asp-for="Input.LastName" class="form-control rounded-edges-log" placeholder="Last Name">
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                                <input asp-for="Input.MobileNo" class="form-control rounded-edges-log" placeholder="Mobile No">
                                <span asp-validation-for="Input.MobileNo" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3">
                                <input asp-for="Input.CNIC" class="form-control rounded-edges-log" placeholder="CNIC">
                                <span asp-validation-for="Input.CNIC" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                                <input asp-for="Input.Email" type="email" class="form-control rounded-edges-log" placeholder="Email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                                <input asp-for="Input.Password" type="password" class="form-control rounded-edges-log" placeholder="Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="input-group mb-3">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-edges-log" placeholder="Confirm Password">
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>


                            <div class="row">
                                <!-- /.col -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                                </div>
                                <!-- /.col -->
                            </div>
                        </form>


                    </div>
                    <!-- /.login-card-body -->
